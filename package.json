{
  "name": "daily-www",
  "version": "0.1.0",
  "description": "Website for Spark Daily",
  "main": "server.js",
  "engines": {
    "node": "5.9.1",
    "npm": "3.7.1"
  },
  "scripts": {
    "start": "node server.js",
    "test": "PORT=3001 DATABASE_URL=postgresql://localhost/test npm run lint",
    "lint": "eslint api/**",
    "debug": "DEBUG=1 nodemon server.js",
    "pg-schema-test": "psql -c 'DROP DATABASE IF EXISTS test' && psql -c 'CREATE DATABASE test' && psql -d test -a -f schema.sql",
    "pg-schema-dev": "psql -c 'DROP DATABASE IF EXISTS daily_development' && psql -c 'CREATE DATABASE daily_development' && psql -d daily_development -a -f schema.sql",
    "pg-data": "psql -d daily_development -a -f data.sql"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/sparkthecause/daily.git"
  },
  "author": "Charles Burgess",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/sparkthecause/daily/issues"
  },
  "homepage": "https://github.com/sparkthecause/daily#readme",
  "dependencies": {
    "bluebird": "^3.2.2",
    "body-parser": "^1.14.2",
    "express": "^4.13.3",
    "express-handlebars": "^3.0.0",
    "express-sslify": "^1.0.1",
    "knex": "^0.9.0",
    "moment": "^2.11.2",
    "moment-business": "^2.0.0",
    "pg": "^4.4.4",
    "sendgrid": "^2.0.0",
    "validator": "^4.7.1"
  },
  "devDependencies": {
    "dotenv": "^2.0.0",
    "eslint": "^1.10.3",
    "nodemon": "^1.9.1",
    "pg-monitor": "^0.4.5"
  }
}
