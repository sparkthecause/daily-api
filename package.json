{
  "name": "daily-api",
  "version": "0.1.0",
  "description": "API for Spark Daily",
  "main": "server.js",
  "engines": {
    "node": "6.3.0",
    "npm": "3.10.5"
  },
  "scripts": {
    "start": "node server.js",
    "pretest": "npm run lint",
    "test": "PORT=3001 DATABASE_URL=postgresql://localhost/test",
    "lint": "eslint api www --fix",
    "debug": "DEBUG=1 nodemon server.js",
    "pg-test": "psql -c 'DROP DATABASE IF EXISTS test' && psql -c 'CREATE DATABASE test' && psql -d test -a -f schema.sql",
    "pg-dev": "psql -c 'DROP DATABASE IF EXISTS daily_development' && psql -c 'CREATE DATABASE daily_development' && psql -d daily_development -a -f schema.sql",
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/sparkthecause/daily-api.git"
  },
  "author": "Charles Burgess",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/sparkthecause/daily-api/issues"
  },
  "homepage": "https://github.com/sparkthecause/daily-api",
  "dependencies": {
    "bluebird": "^3.4.1",
    "body-parser": "^1.15.2",
    "cron": "^1.1.0",
    "express": "^4.14.0",
    "express-sslify": "^1.1.0",
    "inline-css": "^2.2.2",
    "knex": "^0.11.7",
    "moment": "^2.14.1",
    "moment-business": "^3.0.0",
    "mustache": "^2.2.1",
    "pg": "^6.0.2",
    "postmark": "^1.2.1",
    "request-promise": "^3.0.0",
    "validator": "^5.4.0"
  },
  "devDependencies": {
    "dotenv": "^2.0.0",
    "eslint": "^3.2.2",
    "eslint-config-airbnb": "^7.0.0",
    "nodemon": "^1.9.2"
  }
}
